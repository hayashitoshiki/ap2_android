<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#F5F5F5"
        android:orientation="horizontal">

        <Button
            android:id="@+id/modoru"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="#F5F5F5"
            android:onClick="modoru_onClick"
            android:text="＜戻る"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/holo_red_light" />

        <TextView
            android:id="@+id/kensakugamen"
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:background="#F5F5F5"
            android:gravity="center_vertical|center_horizontal"
            android:text="店舗情報"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    </LinearLayout>


    <fragment
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="379dp"
        tools:context="com.example.a1521093.googlemaprensyu.MapsActivity"
        android:layout_weight="0.70" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#00000000"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/homebutton"
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/home" />

        <ImageButton
            android:id="@+id/coupon_button"
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/cuupon2" />

        <ImageButton
            android:id="@+id/account_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:src="@drawable/account2" />

    </LinearLayout>
</LinearLayout>