<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/modoru"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="#D3D3D3"
            android:onClick="modoru_onClick"
            android:text="＜戻る"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/holo_red_light" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="店舗情報"
            android:textSize="36sp"
            android:background="#D3D3D3"
            android:gravity="center" />
    </LinearLayout>

    <fragment
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="379dp"
        tools:context="com.example.a1521093.googlemaprensyu.MapsActivity"
        android:layout_weight="0.70" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ヤマダ電機 LABI品川大井町店"/>
                                <!--store_Name -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="東京都品川区東大井５丁目２０−１"/>
                            <!-- store_address -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:00～22:00"/>
               <!-- Time(?)データベースに加わるか次第 -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="508080円" />
                 <!-- product_price -->

</LinearLayout>