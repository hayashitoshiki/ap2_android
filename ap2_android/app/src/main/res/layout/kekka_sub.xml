<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/loop"
    android:weightSum="1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="0.15">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="120dp"
                android:layout_height="92dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="23dp"
                android:scaleType="centerCrop"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_launcher" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="20dp"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="65dp" />

            <TextView
                android:id="@+id/syouhinmei"
                android:layout_width="184dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="商品名"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintLeft_toRightOf="@+id/imageView"
                app:layout_constraintRight_toLeftOf="@+id/susumu"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                app:layout_constraintHorizontal_bias="0.574" />

            <TextView
                android:id="@+id/genzaitikara"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:text="現在地から"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                tools:ignore="MissingConstraints"
                app:layout_constraintLeft_toRightOf="@+id/imageView"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="19dp"
                app:layout_constraintTop_toBottomOf="@+id/zyusyo" />


            <TextView
                android:id="@+id/kyori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="000"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/holo_red_light"
                tools:layout_editor_absoluteY="75dp"
                app:layout_constraintLeft_toRightOf="@+id/genzaitikara"
                android:layout_marginLeft="8dp"
                app:layout_constraintRight_toLeftOf="@+id/susumu"
                android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="0.394" />

            <TextView
                android:id="@+id/m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="13dp"
                android:text="ｍ"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/holo_red_light"
                tools:layout_editor_absoluteY="75dp"
                app:layout_constraintLeft_toRightOf="@+id/kyori"
                android:layout_marginLeft="0dp" />

            <Button
                android:id="@+id/susumu"
                android:layout_width="59dp"
                android:layout_height="52dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/holo_red_light"
                android:onClick="susumu_onClick"
                android:text="＞"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/syouhinmei"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteY="65dp"
                tools:layout_editor_absoluteX="344dp" />

            <TextView
                android:id="@+id/nokori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="残り"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                app:layout_constraintLeft_toRightOf="@+id/imageView"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="22dp"
                app:layout_constraintTop_toBottomOf="@+id/genzaitikara" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/holo_red_light"
                tools:layout_editor_absoluteY="113dp"
                app:layout_constraintLeft_toRightOf="@+id/nokori"
                android:layout_marginLeft="8dp"
                app:layout_constraintRight_toLeftOf="@+id/susumu"
                android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="0.535" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="個"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/holo_red_light"
                tools:layout_editor_absoluteY="113dp"
                app:layout_constraintLeft_toRightOf="@+id/textView2"
                android:layout_marginLeft="-2dp" />

            <CheckedTextView
                android:id="@+id/checkedTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地図を見る"
                tools:layout_editor_absoluteX="38dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <TextView
                android:id="@+id/zyusyo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="東京都杉並区2丁目２－２－２"
                tools:layout_editor_absoluteX="148dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/syouhinmei" />
        </android.support.constraint.ConstraintLayout>
    </RelativeLayout>

</LinearLayout>