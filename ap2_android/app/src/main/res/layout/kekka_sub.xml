<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/loop"
    android:background="#FFFFFF"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.15">

            <ImageView
                android:id="@+id/store_image"
                android:layout_width="120dp"
                android:layout_height="92dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:scaleType="centerCrop"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_launcher" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="16dp" />

            <TextView
                android:id="@+id/syouhinmei"
                android:layout_width="154dp"
                android:layout_height="72dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="11dp"

                android:layout_marginTop="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="商品名"
                android:textColor="#000000"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintRight_toLeftOf="@+id/susumu"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                app:layout_constraintLeft_toRightOf="@+id/store_image"
                android:layout_marginLeft="8dp"
                app:layout_constraintHorizontal_bias="1.0" />

            <TextView
                android:id="@+id/genzaitikara"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="17dp"
                android:text="現在地から"
                android:textColor="#000000"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                app:layout_constraintLeft_toRightOf="@+id/store_image"
                app:layout_constraintTop_toBottomOf="@+id/zyusyo"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/kyori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="000"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/holo_red_light"
                app:layout_constraintHorizontal_bias="0.463"
                app:layout_constraintLeft_toRightOf="@+id/genzaitikara"
                app:layout_constraintRight_toLeftOf="@+id/susumu"
                app:layout_constraintTop_toBottomOf="@+id/zyusyo" />



            <ImageButton
                android:id="@+id/susumu"
                android:background="#00000000"
                android:layout_width="51dp"
                android:layout_height="166dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="-651dp"
                android:src="@drawable/konyu"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/syouhinmei"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                tools:layout_editor_absoluteX="325dp" />



            <TextView
                android:id="@+id/zyusyo"
                android:layout_width="162dp"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="9dp"
                android:text="東京都杉並区2丁目２－２－２"
                android:textColor="#000000"
                app:layout_constraintLeft_toRightOf="@+id/store_image"
                app:layout_constraintRight_toLeftOf="@+id/susumu"
                app:layout_constraintTop_toBottomOf="@+id/syouhinmei"
                app:layout_constraintHorizontal_bias="0.0" />

            <Button
                android:id="@+id/tizu"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="8dp"

                android:text="地図を見る"
                android:textColor="@android:color/holo_blue_dark"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/store_image" />

        </android.support.constraint.ConstraintLayout>
    </RelativeLayout>

</LinearLayout>