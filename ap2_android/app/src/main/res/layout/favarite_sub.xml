<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/loop"
    android:background="#FFFFFF"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.15">

            <ImageView
                android:id="@+id/store_image"
                android:layout_width="95dp"
                android:layout_height="89dp"
                android:layout_marginLeft="-3dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                android:scaleType="centerCrop"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_launcher" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="16dp"
                tools:layout_editor_absoluteY="25dp"
                tools:layout_editor_absoluteX="16dp" />

            <TextView
                android:id="@+id/syouhinmei"
                android:layout_width="187dp"
                android:layout_height="61dp"
                android:layout_marginTop="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="商品名"
                android:textColor="#000000"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_constraintLeft_creator="1"
                tools:layout_editor_absoluteX="123dp"
                tools:layout_editor_absoluteY="12dp" />

            <TextView
                android:id="@+id/zyusyo"
                android:layout_width="181dp"
                android:layout_height="62dp"
                android:layout_marginTop="9dp"
                android:text="店の名前"
                android:textColor="#000000"
                app:layout_constraintTop_toBottomOf="@+id/syouhinmei"
                tools:layout_editor_absoluteX="128dp"
                tools:layout_editor_absoluteY="87dp" />

            <Button
                android:id="@+id/imageButton4"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_weight="0.01"
                android:background="#FA8072"
                app:srcCompat="@android:drawable/ic_menu_delete"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="24dp"
                android:drawableTop="@drawable/dust"
                app:layout_constraintLeft_toRightOf="@+id/syouhinmei"
                android:layout_marginLeft="8dp"
                app:layout_constraintHorizontal_bias="1.0"
                tools:layout_editor_absoluteX="322dp" />

        </android.support.constraint.ConstraintLayout>
    </RelativeLayout>

</LinearLayout>