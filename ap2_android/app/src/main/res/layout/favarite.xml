<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#D3D3D3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/okiniirigamen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#D3D3D3"
            android:gravity="center_vertical|center_horizontal"
            android:text="お気に入り"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.15">

            <ImageView
                android:id="@+id/store_image2"
                android:layout_width="92dp"
                android:layout_height="90dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="31dp"
                android:scaleType="centerCrop"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/gemu" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="16dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="65dp" />

            <TextView
                android:id="@+id/syouhinmei2"
                android:layout_width="170dp"
                android:layout_height="76dp"
                android:layout_marginTop="16dp"
                android:ellipsize="end"
                android:text="Nintendo Switch ネオンブルー / ネオンレッド"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#000000"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/store_image2"
                android:layout_marginLeft="19dp"
                tools:layout_editor_absoluteY="15dp" />

            <TextView
                android:id="@+id/zyusyo2"
                android:layout_width="169dp"
                android:layout_height="56dp"
                android:layout_marginTop="0dp"
                android:text="ヨドバシカメラ マルチメディアAkiba"
                android:textColor="#000000"
                app:layout_constraintTop_toBottomOf="@+id/syouhinmei2"
                app:layout_constraintLeft_toRightOf="@+id/store_image2"
                android:layout_marginLeft="19dp"
                tools:layout_editor_absoluteY="102dp" />

            <Button
                android:id="@+id/sakujoButton2"
                android:layout_width="51dp"
                android:layout_height="99dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="23dp"
                android:layout_weight="0.01"
                android:background="#FA8072"
                android:drawableTop="@drawable/dust"
                app:layout_constraintHorizontal_bias="0.68"
                app:layout_constraintLeft_toRightOf="@+id/syouhinmei2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                 />

        </android.support.constraint.ConstraintLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#00000000"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/homebutton2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:src="@drawable/home2" />

            <ImageButton
                android:id="@+id/favarite_button2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:src="@drawable/cuupon" />

            <ImageButton
                android:id="@+id/account_button2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:src="@drawable/account2" />

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>



